<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee">
        <include layout="@layout/toolbar" android:id="@+id/action_bar"></include>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv"
    android:layout_above="@+id/divider"
    android:layout_below="@+id/action_bar"></android.support.v7.widget.RecyclerView>

    <View
        android:background="#cdcdcd"
        android:layout_width="match_parent"
        android:layout_height="0.01dip"
        android:layout_above="@+id/bottom"
        android:id="@+id/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/total"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:id="@+id/daizhifu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52.6元"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/payinstance"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:id="@+id/total"
            android:textColor="#fb4e44"
            />
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/payinstance">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交订单"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
