<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2.5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冯小刚"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/name1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="13902883861"
        android:id="@+id/phonenumber"
        android:textSize="18sp"
        android:layout_marginRight="12dp"/>
</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:id="@+id/address"
        android:text="广东省广州市番禺区钟村街道钟村祈福"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <include  layout="@layout/divider2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/defult"
                android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/defult"
            android:layout_marginLeft="7dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/deleterl"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/deleteimg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toLeftOf="@+id/delete"
                android:layout_centerVertical="true"
                />
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/></RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/deleterl"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/editrl">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/editphoto"
                android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:id="@+id/edit"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editphoto"
            /></RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1"></View>
</LinearLayout>
